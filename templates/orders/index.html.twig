{% extends 'base.html.twig' %}

{% block title %}Hello OrdersController!
{% endblock %}

{% block body %}

	<section id="account">
		<h2>Mon compte</h2>
		<div class="container">
			<h3>Mes commandes</h3>
			<table>
				<thead>
					<tr>
						<th scope="col">N°</th>
						<th scope="col">Date</th>
						<th scope="col">Prix</th>
					</tr>
				</thead>
				<tbody>
					{% for order in orders %}
						<tr>
							<td>{{ order.id }}</td>
							<td>{{ order.validationDateToString }}</td>
							<td>{{ order.priceConverded|replace({'.': ","}) }}€</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="apiAccess">
			<h3>Mon accès API</h3>
			<button>Activer Mon accès API</button>
		</div>

		<div class="apiAccess">
			<button>Supprimer mon compte</button>
		</div>
	</section>

{% endblock %}
